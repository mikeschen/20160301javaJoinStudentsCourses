<!doctype html>
<html>
  <head>
    <title>University Regigtrar</title>
    <link rel='stylesheet' href='https://maxcdn.bootstrapcdn.com/bootstrap/3.2.0/css/bootstrap.min.css'>
    <link rel="stylesheet" href="/css/app.css" type="text/css">
  </head>
  <body>
    <div class="container">

      <div class="pagehead">
        <h1>Course Database</h1>
      </div>

      <div class="row">
        <div id="left-col" class="col-md-6">
          <h2>List of Students</h2>

          <form action="/" method="post">
            <div class="form-group">
              <select id="course" name="course" class="form-control" type="text" onchange="this.form.submit();">
                <option selected="true" disabled="disabled">Choose a Course</option>
                #foreach($course in $courses)
                <option value="$course.getId()">$course.getName()</option>
                #end
              </select>
            </div>
          </form>

          #if($listCourseName)
          <h4>$listCourseName</h4>
          #end
          <ul>
            #foreach ($student in $students)
            <a href="/student/$student.getId()"><li>$student.getName()</li></a>
            #end
          </ul>

          ## Edit Database Control Panel
          <a href="/new-student"><button class="btn btn-info">Add a Student</button></a>
          <a href="/add-course"><button class="btn btn-info">Add a Course</button></a>
        </div>
        <div id="right-col" class="col-md-6">
          #parse( $template )
        </div>
      </div>


    </div>
  </body>
</html>
